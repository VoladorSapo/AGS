// room script file

function room_Load()
{
SetBackgroundFrame(0);
}

function on_key_press(eKeyCode keycode)
{
if (keycode == eKey1)
  {
    if(Noche==0){
      while(Noche<4){
        Noche++;
        SetBackgroundFrame(Noche);
        Wait(6);
      }
    }else{
      while(Noche>0){
        Noche--;
        SetBackgroundFrame(Noche);
        Wait(6);
      }
    }
  }
}


function room_RepExec()
{
    SetBackgroundFrame(Noche);
}

